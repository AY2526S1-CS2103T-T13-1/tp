<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TitledPane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        <Label fx:id="pinIndicator" text=" ðŸ“Œ" style="-fx-font-size: 10px;" visible="false" />
        <Label text="  |  " styleClass="cell_small_label" />
        <Label fx:id="address" styleClass="cell_small_label"
               style="-fx-font-weight: bold; -fx-font-style: italic;"
               text="\$address" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <VBox fx:id="events" spacing="5" VBox.vgrow="ALWAYS" />
      <Region prefHeight="10"/>
      <TitledPane fx:id="notePane" text="Note" expanded="false">
        <content>
          <VBox>
            <Label fx:id="note" styleClass="note_label" wrapText="true"/>
          </VBox>
        </content>
      </TitledPane>
    </VBox>
  </GridPane>
</HBox>
