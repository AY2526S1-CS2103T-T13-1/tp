<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15"
      alignment="TOP_CENTER"
      style="-fx-background-color: #1e1e1e; -fx-padding: 15;">

    <!-- Dashboard Title -->
    <Label text="ðŸ“Š Summary Dashboard"
           style="-fx-text-fill: #00aaff; -fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Two Boxes: Total Contacts and Pie Chart -->
    <HBox spacing="25" alignment="CENTER">
        <!-- Total Contacts Box -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: #252526; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0.3, 0, 2);">

            <Label text="Total Contacts"
                   style="-fx-text-fill: #cccccc; -fx-font-size: 14px;"/>

            <Label fx:id="totalContactsLabel"
                   style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Tag Pie Chart Box -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: #252526; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0.3, 0, 2);">
            <Label text="Tag Distribution"
                   style="-fx-text-fill: #cccccc; -fx-font-size: 14px;"/>
            <PieChart fx:id="tagPieChart"
                      legendVisible="true"
                      labelsVisible="true"
                      prefHeight="220" prefWidth="320"/>
        </VBox>
    </HBox>
</VBox>
